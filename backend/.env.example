# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Session Manager Configuration  
CLINIPROMPT_STORAGE_ROOT=/var/lib/cliniprompt
CLINIPROMPT_MAX_TOTAL_STORAGE=1073741824
CLINIPROMPT_MAX_SESSION_STORAGE=104857600
CLINIPROMPT_STREAMING_CHUNK_SIZE=1048576
CLINIPROMPT_SESSION_TIMEOUT=14400
CLINIPROMPT_CLEANUP_INTERVAL=3600
CLINIPROMPT_MAX_CONCURRENT=5
CLINIPROMPT_CLEANUP_GRACE_PERIOD=300
CLINIPROMPT_FILE_LOCK_TIMEOUT=30
CLINIPROMPT_DISK_SPACE_THRESHOLD=0.9

# Audio Processor Configuration
CLINIPROMPT_AUDIO_MAX_SIZE=31457280
CLINIPROMPT_AUDIO_TIMEOUT=300
CLINIPROMPT_AUDIO_QUALITY_THRESHOLD=0.6

# Content Analyzer Configuration
CLINIPROMPT_PDF_MAX_SIZE=10485760
CLINIPROMPT_WEB_TIMEOUT=30
CLINIPROMPT_WEB_MAX_CONTENT=1048576

# FastAPI Configuration
CLINIPROMPT_API_HOST=0.0.0.0
CLINIPROMPT_API_PORT=8000
CLINIPROMPT_API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json